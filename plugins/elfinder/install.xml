<?xml version="1.0" encoding="utf-8" ?>
<plugin name="elfinder">
	<title>elFinder Manager</title>
	<summary>Cool file manager for your uploads folder</summary>
	<author>Intelliants LLC</author>
	<contributor>Intelliants LLC</contributor>
	<version>1.0.2</version>
	<date>2015-10-27</date>
	<compatibility>4.0</compatibility>

	<adminpages>
		<page group="content" name="elfinder" url="elfinder/" menus="menu" filename="index" order="45">Uploads Manager</page>
	</adminpages>

	<configgroup name="elfinder">elFinder</configgroup>

	<config group="elfinder" name="elfinder_divider" type="divider">General</config>
	<config group="elfinder" name="elfinder_ckeditor_integration" type="radio" values="1,0" description="Integrate with CKEditor" private="0">1</config>
</plugin>